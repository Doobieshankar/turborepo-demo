//run "npx prisma studio" on "eshop/apps/admin/" to interact with postgres database

 generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drone {
  id     String  @id @default(uuid())
  name   String
  type   String
  status String
  createdAt DateTime @default(now())
}
